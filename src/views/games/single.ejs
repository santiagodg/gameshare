<%- include (".././partials/header") %>
<%- include (".././partials/navbar") %>
<div class="container py-5 h-100 main">
    <div class="row">
        <div class="col-3">
            <img class="w-100 shadow" src="<%= game.image %>">
            <% if (game.avgRating !== null) { %>
                <div class="text-center">
                    <p class="mt-4 mb-0">Rating</p>
                    <p class="display-4"><%= game.avgRating %></p>
                </div>
            <% } %>
        </div>
        <div class="col-9">
            <div class="row">
                <div class="col-8">
                    <h1 class="d-inline-block"><%= game.name %></h1>
                    <p class="mt-4"><%= game.description %></p>
                </div>
                <div class="col-4">
                    <div class="game-rate-box rounded">
                        <div class="py-4 px-3">
                            <form id="rate-game" action="/games/<%= game._id %>/rating" method="POST">
                                <input type="hidden" name="author" value="<%= user._id %>" form="rate-game">
                                <label for="rating-score">Rate</label>
                                <div class="input-group">
                                    <input id="rating-score" form="rate-game" class="form-control" name="score" type="number" min="1" max="5">
                                    <div class="input-group-append">
                                        <input type="submit" class="btn btn-outline-primary text-uppercase font-weight-bold" form="rate-game">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="dropdown-divider m-0"></div>
                        <div class="text-center py-4 px-3">
                            <a class="btn btn-primary text-uppercase font-weight-bold" href="/games/<%= game._id %>/review">Review</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <% if (game.reviews.length !== 0) { %>
                        <div class="row mt-4">
                            <div class="col">
                                <h2>Reviews</h2>
                                <div class="dropdown-divider"></div>
                                <% game.reviews.forEach(review => { %>
                                    <div class="my-4">
                                        <p class="mb-2">
                                            <span>Reviewed by</span>
                                            <span class="font-weight-bold">&nbsp;&nbsp;<%= review.author.username %></span>
                                            <span>&nbsp;&nbsp;⭐<%= review.rating.score %></span>
                                        </p>
                                        <p class="mb-0"><%- review.text.replaceAll('\n', '<br>') %></p>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
