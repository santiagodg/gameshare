<%- include (".././partials/header") %>
  <!-- TODO: remove styles from html and put them on the CSS file -->
  <%- include (".././partials/loginNavbar") %>

    <div class="jumbotron my-5 mx-auto w-70 h-100 hero edges">
      <h1 class="display-4 text-light">Welcome to GameShare!</h1>
      <p class="lead text-white-50">The all-in-one platform to share your game lists with the community. videogame or a board game... GameShare is here for you!</p>
      <hr class="my-4">
      <div id="carouselExampleIndicators" class="carousel slide w-100 mx-auto d-flex justify-content-center" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner carousel-size">
          <div class="carousel-item active">
            <img class="d-block w-100" src="images/slides/hero-1.webp" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>Tabletop Games</h5>
              <p>Find new tabletop games to play with friends</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="images/slides/hero-2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>Videgames</h5>
              <p>Want to try other videogames?</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="images/slides/hero-3.png" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>Huge library of games</h5>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="images/slides/hero-4.png" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>Join the community</h5>
              <p>Share your own games lists</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

