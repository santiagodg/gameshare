<%- include (".././partials/header") %>
<%- include (".././partials/navbar") %>
<div class="container py-5 h-100 main">
    <div class="row">
        <div class="col">
            <div class="row justify-content-between">
                <div class="col">
                    <p class="mb-0 pl-2">List by <span class="font-weight-bold"><%= list.author.username %></span></p>
                    <p class="pl-2">Created on <span><%= list.createdAt.toDateString() %></span></p>
                </div>
                <% if ( user.isAdmin || user._id === list.author._id ) { %>
                <div class="col text-right">
                    <form action ='/list/<%= list._id %>/toggle-softdelete' method="POST">
                        <button class="btn btn-outline-primary" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                            </svg>
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
            
            <h1 class="h3 mb-0 pl-2"><%= list.name %></h1>
            <p class="pl-2"><%= list.description %></p>
            <div class="row no-gutters my-4">
                <% list.games.forEach(game => { %>
                    <div class="col-2 px-1 my-3 align-self-center">
                        <a href="/games/<%= game._id %>">
                            <img class="w-100 rounded game" src="<%= game.image %>">
                        </a>
                    </div>
                <% }) %>
            </div>
            <p class="text-uppercase mb-0 pl-2">Comments</p>
            <div class="dropdown-divider"></div>
            <div class="row p-2">
                <div class="offset-4 col-8">
                    <form action="/list/<%= list._id %>/comments/new" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" name="comment" placeholder="Write your comment here..." required="required" rows="4"></textarea>
                        </div>
                        <div class="row">
                            <div class="col text-right">
                                <button class="btn btn-primary text-uppercase font-weight-bold" type="submit" name="listOfComment" value="<%= list._id %>">Post</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="dropdown-divider"></div>
            <div>
                <% list.comments.forEach(comment => { %>
                    <div class="row my-2 px-2">
                        <div class="col-3">
                            <p class="mb-0 font-weight-bold"><%= comment.author.username %></p>
                            <p><%= comment.createdAt.toDateString() %></p>
                        </div>
                        <div class="offset-1 col-7">
                            <p><%= comment.text %></p>
                        </div>
                        <div class="col-1 text-right">
                            <form action ='/list/<%= list._id %>/comments/<%= comment._id %>?_method=DELETE' method="POST">
                                <button class="btn btn-outline-primary" type="submit" name="listOfComment" value="<%= list._id %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include (".././partials/footer") %>
